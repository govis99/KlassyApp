<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KlassyApp"
        tools:targetApi="31">

        <!-- ðŸ‘‡ LoginActivity becomes the launcher -->
        <activity
            android:name="com.company.klassyapp.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.KlassyApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- âœ… Keep MainActivity, just remove launcher intent -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.KlassyApp.NoActionBar" />

        <activity android:name=".MakePostActivity" />


    </application>

    <uses-permission android:name="android.permission.INTERNET" />


</manifest>